# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-Your-Bot-Token

# Gamdl CLI
COOKIES_PATH=./cookies.txt
OUTPUT_ROOT=./downloads
LOG_LEVEL=INFO
CONCURRENCY=1
LOCALE=en
# Extra flags to pass to gamdl (optional)
# GAMDL_EXTRA_ARGS=--save-cover --save-playlist

# Force subscribe (optional)
FORCE_SUB_ENABLED=false
FORCE_SUB_CHANNEL=@your_channel
FORCE_SUB_JOIN_URL=

# Access control
PUBLIC_MODE=true
ADMIN_USER_IDS=123456789
ALLOWED_USER_IDS=

# Cleanup
TEMP_TTL_HOURS=24
CLEANUP_INTERVAL_HOURS=12
TEMP_DIR_PREFIX=gamdl_

# DB (optional, SQLite)
# Either use DATABASE_URL=sqlite:///./bot.db or BOT_DB_PATH=./bot.db
# DATABASE_URL=sqlite:///./bot.db
# BOT_DB_PATH=./bot.db

# Single-instance lock
LOCK_FILE=/tmp/gamdl_telegram_bot.lock
